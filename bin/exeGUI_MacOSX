#! /bin/sh


stPath=${ST_HOME}/jar/scala-tinker.jar

lwjglLibPath=${ST_HOME}/lib/lwjgl/native/macosx

lwjglPath=${ST_HOME}/lib/lwjgl/jar/lwjgl.jar:${ST_HOME}/lib/lwjgl/jar/lwjgl_util.jar


option="-J-XstartOnFirstThread"
libPath=${ST_HOME}/lib/swt/macosx/64bit/
swtPath=${ST_HOME}/lib/swt/macosx/64bit/swt.jar


mainClass="irisalab.tinker.gui.RISMSWTGUI"

#echo $swtPath

scala  $option -classpath ${stPath}:${swtPath}:$lwjglPath  -Djava.library.path=${libPath}:$lwjglLibPath ${mainClass}
