#!/bin/sh



#-----------
# Arch
#-----------
type=`arch`

if [ $type = "i386" ];then
    bit=32
elif [ $type = "i686" ];then
    bit=32
else
    bit=64
fi

#-----------
# OS
#-----------
os=`uname -s`

if [ "$os" == "Darwin" ];then  # Mac OS X
    jarPath=${ST_HOME}/jar/csb-assembly-macosx.jar
elif [ "$os" == "Linux" ];then  # Linux
    jarPath=${ST_HOME}/jar/csb-assembly-linux${bit}.jar
elif [ "$(expr substr $os 1 6)" == "CYGWIN" ];then  #Cygwin
    jarPath=`cygpath -pw ${ST_HOME}/jar/csb-assembly-windows${bit}.jar`
else
    jarPath=${ST_HOME}/jar/csb-assembly-linux${bit}.jar
fi



#heapSize=1024
heapSize=2048

#permSize=64
permSize=128

memoryOptions="-XX:NewRatio=1 -Xmx${heapSize}M -Xms${heapSize}M -XX:MaxPermSize=${permSize}M -XX:PermSize=${permSize}M "


mainClass="irisalab.amber.analysis.TrajectoryAnalyzer"


java $memoryOptions -classpath $jarPath  $mainClass   $@
