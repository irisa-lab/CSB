#!/bin/sh



#-----------
# Arch
#-----------
type=`arch`

if [ $type = "i386" ];then
    bit=32
elif [ $type = "i686" ];then
    bit=32
else
    bit=64
fi

#-----------
# OS
#-----------
os=`uname -s`

if [ "$os" == "Darwin" ];then  # Mac OS X
    jarPath=${ST_HOME}/jar/scala-tinker-assembly-macosx.jar
elif [ "$os" == "Linux" ];then  # Linux 
    jarPath=${ST_HOME}/jar/scala-tinker-assembly-linux${bit}.jar    
elif [ "$(expr substr $os 1 6)" == "CYGWIN" ];then  #Cygwin
    jarPath=`cygpath -pw ${ST_HOME}/jar/scala-tinker-assembly-windows${bit}.jar`
else
    jarPath=${ST_HOME}/jar/scala-tinker-assembly-linux${bit}.jar
fi


mainClass="irisalab.tinker.cui.RISMCUI"


java -classpath $jarPath  $mainClass
