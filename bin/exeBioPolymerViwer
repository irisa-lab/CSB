#! /bin/sh


stPath=${ST_HOME}/jar/scala-tinker.jar


lwjglLibPath=${ST_HOME}/lib/lwjgl/native/linux
lwjglPath=${ST_HOME}/lib/lwjgl/jar/lwjgl.jar:${ST_HOME}/lib/lwjgl/jar/lwjgl_util.jar

jvmOption=-J-XX:CompileThreshold=1000

type=`arch`

echo "Architectur:"$type

if [ $type = "i386" ];then

	libPath=${ST_HOME}/lib/swt/linux/32bit/
	swtPath=${ST_HOME}/lib/swt/linux/32bit/swt.jar

elif [ $type = "i686" ];then

	libPath=${ST_HOME}/lib/swt/linux/32bit/
	swtPath=${ST_HOME}/lib/swt/linux/32bit/swt.jar

else
	libPath=${ST_HOME}/lib/swt/linux/64bit/
	swtPath=${ST_HOME}/lib/swt/linux/64bit/swt.jar
fi


mainClass="irisalab.tinker.visual.BioPolymerViewer"

#echo $swtPath

scala $jvmOption -classpath ${stPath}:${swtPath}:$lwjglPath  -Djava.library.path=${libPath}:$lwjglLibPath ${mainClass} $1



